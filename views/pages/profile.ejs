<title>Tehama Awards | <%= title %> </title>
<!-- Inner Page Header serction start here -->
<div class="inner-page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="header-page-title text-center">
                    <h2>Profile</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Inner Page Header serction end here -->

<!-- Portfolio Details Start Here -->
<div class="portfolio-details-area pt-90 pb-90">
    <div class="container wow fadeInRight" data-wow-delay="0.1s">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 mb-5">
                <div class="portfolio-informations">
                    <h3>My Details</h3>
                    <ul>
                        <li>First Name:<span> <%= user.firstname %></span></li>
                        <li>Last Name:<span> <%= user.lastname %></span></li>
                        <li>Email:<span> <%= user.email %></span></li>
                        <li>Total submissions:<span> <%= (locals.submissions).length %></span></li>
                    </ul>
                    <div class="visit-project">
                        <a href="/signout"><i class="fa fa-sign-out"></i> Sign Out</a>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="section-title mt-5">
                    <h2>My <span> Submissions</span></h2>
                </div>
            </div>
            <% if (locals.submissions) { %>
                <% (locals.submissions).forEach(submission => { %>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="portfolio-informations">
                            <form class="regform">
                                <fieldset>
                                    <ul id="preview">
                                        <li><i style="font-weight: bolder; color: #1375bc;">Title:</i> <%= submission.title %></li>
                                        <li>
                                            <embed src="<%=submission.pdfFile%>" type="application/pdf" width="100%" height="400px"/>
                                        </li>
                                        <li><i style="font-weight: bolder; color: #1375bc;">Category:</i> <%= submission.category %></li>
                                        <li><i style="font-weight: bolder; color: #1375bc;">Submitted as:</i> <%= submission.submitter %></li>
                                        <li><i style="font-weight: bolder; color: #1375bc;">Submission details:</i> <%= submission.details %></li>
                                    </ul>
                                </fieldset>
                            </form>
                        </div>
                    </div>

                <% }) %>
            <% } %>
        </div>
    </div>
</div>
<!-- Portfolio Details End Here -->